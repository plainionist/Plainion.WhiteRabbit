{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "plainion-whiterabbit",
  "version": "0.1.0",
  "identifier": "com.plainion-whiterabbit.app",
  "build": {
    "beforeDevCommand": "dotnet build src-dotnet && pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "dotnet publish -c Release src-dotnet/src-dotnet.sln && pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Plainion WhiteRabbit",
        "width": 600,
        "height": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "msi",
    "icon": ["icons/icon.ico"]
  }
}
